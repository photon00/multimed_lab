<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <style>
            table{border: 3px solid black;}
            td{border: 1px dotted black;}
        </style>
    </head>
    <body>
        <h1><%= title %></h1>
        <form method="post">
            <h3>Choose Mode</h3>
            <input type="radio" name="mode" value="1">COMP
            <input type="radio" name="mode" value="2">CMPLX<br>
            A =  <input type="text" name="inputA" size="30"><br>
            <select name="operator">
                <option value="1">+</option>
                <option value="2">-</option>
                <option value="3">*</option>
                <option value="4">/</option>
            </select><br>
            B =  <input type="text" name="inputB" size="30"><br>
            <input type="submit" value="=">
        </form>
        <table style="width:100%">
            <tr>
                <th width="20%">A</th>
                <th width="20%">+-*/</th>
                <th width="20%">B</th>
                <th width="20%">=</th>
                <th width="20%">Time</th>
            </tr>
            <% users.forEach(function(user) {%>
            <tr>
                <td><%= user.A        %></td>
                <td><%= user.operator %></td>
                <td><%= user.B        %></td>
                <td><%= user.answer   %></td>
                <td><%= user.time     %></td>
            </tr>
            <% }) %>
            </table>
    </body>
</html>


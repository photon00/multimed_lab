<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <h1><%= title %></h1>
        <form method="post">
            USERNAME: <input type="text" name="txtUserName" size="30">
            <br>
            CONTENT:  <textarea name="txtContent" rows="5" cols="45"></textarea>
            <br>
            <input type="submit" value="Enter">
        </form>
        <table>
            <tr>
                <th>User</th>
                <th>Comment</th>
                <th>Time</th>
            </tr>
            <% users.forEach(function(user) {%>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.content  %></td>
                <td><%= user.time     %></td>
            </tr>
            <% }) %>
            </table>
    </body>
</html>

